#!/bin/bash

export PATH="/home/yunwu/workspaces/gitworkspace/arty-z7/Digilent-Arty-Z7-Linux-BD-v2016.2/build/linux/rootfs/packages-repo/rootfs-tmp/scripts:/opt/petalinux/petalinux-v2016.2-final/tools/yocto-sdk/sysroots/x86_64-petalinux-linux/usr/bin:/opt/petalinux/petalinux-v2016.2-final/tools/yocto-sdk/sysroots/x86_64-petalinux-linux/sbin:/opt/petalinux/petalinux-v2016.2-final/tools/yocto-sdk/sysroots/x86_64-petalinux-linux/usr/bin/crossscripts:/opt/petalinux/petalinux-v2016.2-final/tools/yocto-sdk/sysroots/x86_64-petalinux-linux/usr/sbin:/usr/sbin:/opt/petalinux/petalinux-v2016.2-final/tools/yocto-sdk/sysroots/x86_64-petalinux-linux/usr/bin:/opt/petalinux/petalinux-v2016.2-final/etc/logging:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/microblaze-xilinx-elf/bin:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/gcc-arm-none-eabi/bin:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/aarch64-none-elf/bin:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/microblazeel-xilinx-linux-gnu/bin:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/arm-linux-gnueabi/bin:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/aarch64-linux-gnu/bin:/opt/petalinux/petalinux-v2016.2-final/tools/common/petalinux/utils:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/petalinux/bin:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/petalinux/bin/unexport:/opt/petalinux/petalinux-v2016.2-final/tools/hsm/bin:/opt/petalinux/petalinux-v2016.2-final/tools/webtalk/bin:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/petalinux/bin:/opt/petalinux/petalinux-v2016.2-final/tools/common/petalinux/bin:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/microblaze-xilinx-elf/bin:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/microblazeel-xilinx-linux-gnu/bin:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/gcc-arm-none-eabi/bin:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/gcc-arm-linux-gnueabi/bin:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/aarch64-none-elf/bin:/opt/petalinux/petalinux-v2016.2-final/tools/linux-i386/aarch64-linux-gnu/bin:/usr/local/cuda-8.0/bin:/home/yunwu/bin:/home/yunwu/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games:/snap/bin"
export D="/home/yunwu/workspaces/gitworkspace/arty-z7/Digilent-Arty-Z7-Linux-BD-v2016.2/build/linux/rootfs/packages-repo/rootfs"
export OFFLINE_ROOT="$D"
export IPKG_OFFLINE_ROOT="$D"
export OPKG_OFFLINE_ROOT="$D"
export INTERCEPT_DIR="/home/yunwu/workspaces/gitworkspace/arty-z7/Digilent-Arty-Z7-Linux-BD-v2016.2/build/linux/rootfs/packages-repo/rootfs-tmp/scripts/intercept_scripts"
export NATIVE_ROOT=/opt/petalinux/petalinux-v2016.2-final/tools/yocto-sdk/sysroots/x86_64-petalinux-linux
export PYTHONIOENCODING="UTF-8"

$2 $1/$3 $4
if [ $? -ne 0 ]; then
    if [ $4 -eq 1 ]; then
	mkdir -p $1/etc/rpm-postinsts
	num=100
	while [ -e $1/etc/rpm-postinsts/${num}-* ]; do num=$((num + 1)); done
	name=`head -1 $1/$3 | cut -d' ' -f 2`
	echo "#!$2" > $1/etc/rpm-postinsts/${num}-${name}
	echo "# Arg: $4" >> $1/etc/rpm-postinsts/${num}-${name}
	cat $1/$3 >> $1/etc/rpm-postinsts/${num}-${name}
	chmod +x $1/etc/rpm-postinsts/${num}-${name}
    else
	echo "Error: pre/post remove scriptlet failed"
    fi
fi
